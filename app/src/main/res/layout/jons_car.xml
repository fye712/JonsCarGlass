<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/card_margin"
    tools:context=".JonsCarService">

    <!--<ImageView
        android:src="@drawable/ic_stop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />-->
    <TextView
        android:id="@+id/brake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#FF1111"
        android:text="████"/>

    <TextView
        android:id="@+id/n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="160px"
        android:paddingLeft="55px"
        android:text="N"
        android:textSize="45px" />

    <TextView
        android:id="@+id/s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="S"
        android:layout_alignParentBottom="true"
        android:paddingBottom="70px"
        android:paddingLeft="58px"
        android:textSize="45px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="traffic"
        android:layout_alignParentBottom="true"
        android:paddingBottom="47px"
        android:paddingLeft="40px"
        android:textSize="25px" />

    <TextView
        android:id="@+id/e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="E"
        android:layout_alignParentBottom="true"
        android:paddingBottom="113px"
        android:paddingLeft="103px"
        android:textSize="45px" />

    <TextView
        android:id="@+id/w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="W"
        android:layout_alignParentBottom="true"
        android:paddingBottom="113px"
        android:paddingLeft="6px"
        android:textSize="45px" />


    <TextView
        android:id="@+id/gear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gear"
        android:textSize="80px"
        android:maxLength="1"
        android:maxLines="1"
        android:paddingLeft="85px"
        android:textColor="#FFFEAA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gear"
        android:textSize="40px"
        android:paddingTop="40px"
        android:textColor="#FFFEAA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="accel%"
        android:textSize="40px"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="40px" />

    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:id="@+id/accel"
        android:layout_height="35px"
        android:layout_width="500px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />



    <TextView
        android:id="@+id/speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="80px" />

    <TextView
        android:id="@+id/fuel_consumed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="60px"
        android:gravity="center"
        android:textSize="80px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingTop="28px"
        android:gravity="center"
        android:text="gal\nused"
        android:textSize="25px" />


</RelativeLayout>
